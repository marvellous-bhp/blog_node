<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
    <body>
    <header>
        <%- include('../partials/header'); %>
    </header>
    <main>
        <div class="container">
            <div class="action">
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col" style="text-align: center;">Number of articles</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% users.forEach(user => { %>
                        <tr>
                          <td><%= user.name %></td>
                          <td><%= user.email %></td>
                          <td style="text-align: center;">
                            <a href="/user/articles/<%= user._id %>" style="color: black;text-decoration: none;">
                              <%= user.password %>
                            </a>
                            
                          </td>
                          <input name="id" value="<%= user._id %>" hidden>
                        </tr>
                      <%}) %>
                    </tbody>
                  </table>
                <!-- <a href="/dashboard" class="btn btn-secondary">All Articles</a> -->
            </div>  
        </div>
    </main>
    
    <%- include('../partials/footer'); %>

    </body>
</html>