<div class="form-group">
  <label for="title">Title</label>
  <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>

<div class="form-group">
  <label for="status">Status</label>
  <select class="form-select" name="status" aria-label="Default select example">
    <option value="public" >Public</option>
    <option value="private">Private</option>
    <!-- <option value="3">Three</option> -->
  </select></div>

<div class="form-group">
  <label for="description">Description</label>
  <textarea required name="description" id="description" type="text" class="form-control"><%= article.description %></textarea>
</div>

<div class="form-group">
  <label for="detail">Detail</label>
  <textarea name="detail" id="detail" type="text" class="form-control"><%= article.detail %></textarea>
</div>

<div class="form-group">
  <label for="markdown">Markdown</label>
  <textarea required name="markdown" id="markdown" class="form-control"><%= user.name %></textarea>
</div>

<a href="/dashboard" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>

<script>
  CKEDITOR.replace( 'description' );
  CKEDITOR.replace( 'detail',{
    extraPlugins: 'filebrowser',
    fileBrowserbrowseURL:'/list', //upload location
    fileBrowserUploadMethod:'form',
    fileBrowserUploadURL:'/upload' //route
  } );
